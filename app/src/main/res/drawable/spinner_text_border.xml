<?xml version="1.0" encoding="utf-8"?>
<layer-list

    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/spinnerBorderStartColor"
                      android:centerColor="@color/spinnerBorderCenterColor"
                      android:endColor="@color/spinnerBorderEndColor"/>
        </shape>
    </item>
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/spinnerBackground"/>
        </shape>
    </item>

</layer-list>