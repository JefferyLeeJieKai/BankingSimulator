<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item>
            <shape>
                <solid
                    android:color="@color/spinnerBackground">
                </solid>

                <corners android:radius="8dp" />

                <padding
                    android:bottom="8dp"
                    android:left="8dp"
                    android:right="8dp"
                    android:top="8dp" />
                <stroke
                    android:width="3dp"
                    android:color="@color/spinnerBorder"/>
            </shape>
        </item>
        <item
            android:width="15dp"
            android:height="15dp"
            android:gravity="bottom|right">

            <bitmap android:gravity="fill_horizontal|fill_vertical"
                android:src="@drawable/drop_down_arrow"/>
        </item>
    </layer-list></item>
</selector>