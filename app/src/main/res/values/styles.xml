<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:datePickerStyle">@style/spinnerDatePickerStyle</item>
    </style>

    <!-- Login hint theme -->
    <style name="LoginFloatingHintAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Login error theme -->
    <style name="LoginErrorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/loginErrorMessage</item>
    </style>

    <!-- profile theme -->
    <style name="profilepage" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="spinnerDatePickerStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#46bdbf</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
</resources>
