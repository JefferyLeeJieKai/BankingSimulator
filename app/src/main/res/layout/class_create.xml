<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient04">

    <TextView
        android:id="@+id/title"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="2%"
        android:layout_centerHorizontal="true"
        android:text="Create Class"
       android:gravity="center"
        android:textColor="#FFFFFF"
        app:autoSizeTextType="uniform"/>

    <View
        android:layout_below="@id/title"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        app:layout_marginTopPercent="2%"
        android:background="#FFFFFF"
        android:paddingBottom="10dip" />

    //get class

    <TextView
        android:id="@+id/classHeader"
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/title"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="76dp"
        android:autoSizeTextType="uniform"
        android:background="#CCFFFFFF"
        android:text="Class name"
        android:textColor="#000000"
        app:layout_heightPercent="8%"
        app:layout_marginLeftPercent="0%"
        app:layout_marginTopPercent="10%"
        app:layout_widthPercent="80%"
        android:padding="10dp"
        app:autoSizeTextType="uniform"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/classTxt"
        app:layout_widthPercent="80%"
        android:layout_height="wrap_content"
        android:layout_below="@id/classHeader"
        android:layout_alignLeft="@id/classHeader"
        android:padding="10dp"
        android:background="#CCFFFFFF">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:hint="Enter a name for your new class" />
    </android.support.design.widget.TextInputLayout>

    <!--//get interest rate
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="265dp"
        android:textColor="#000000"
        android:text="Set Interest Rate:" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/intRateTxt"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="240dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Interest Rate (%)" />
    </android.support.design.widget.TextInputLayout>-->

    //display buttons
    <Button
        android:id="@+id/cancelBtn"
        android:text="Cancel"
        android:background="@drawable/buttonred"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="7%"
        app:layout_marginBottomPercent="7%"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@id/title"
        android:textColor="#FFFFFF"
        android:padding="15dp"
        app:autoSizeTextType="uniform"/>

    <Button
        android:id="@+id/createBtn"
        android:text="Create"
        android:background="@drawable/buttonblue"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="75%"
        app:layout_marginBottomPercent="7%"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@id/title"
        android:textColor="#FFFFFF"
        android:padding="15dp"
        app:autoSizeTextType="uniform"/>

</android.support.percent.PercentRelativeLayout>