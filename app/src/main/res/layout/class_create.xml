<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5">

    <TextView
        android:id="@+id/title"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="9%"
        app:layout_marginTopPercent="2%"
        android:layout_centerHorizontal="true"
        android:text="Create Class"
        android:elevation="20dp"
        android:shadowColor="#666666"
        android:shadowDx="20"
        android:shadowDy="20"
        android:fontFamily="@font/titan_one"
        android:shadowRadius="20"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop="90dp"
        android:background="#000000"
        android:paddingBottom="10dip" />

    //get class
    <TextView
        android:id="@+id/classHeader"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="8%"
        android:layout_below="@id/title"
        android:layout_alignLeft="@id/title"
        app:layout_marginLeftPercent="0%"
        app:layout_marginTopPercent="10%"
        android:textColor="#000000"
        android:text="Class"
        android:background="@drawable/username_field"
        android:autoSizeTextType="uniform"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/classTxt"
        app:layout_widthPercent="80%"
        android:layout_height="wrap_content"
        android:layout_below="@id/classHeader"
        android:layout_alignLeft="@id/classHeader"
        app:layout_marginLeftPercent="0%"
        android:layout_marginTop="-5dp"
        android:background="@drawable/password_field">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:hint="Enter a name for your new class" />
    </android.support.design.widget.TextInputLayout>

    <!--//get interest rate
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="265dp"
        android:textColor="#000000"
        android:text="Set Interest Rate:" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/intRateTxt"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="240dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Interest Rate (%)" />
    </android.support.design.widget.TextInputLayout>-->

    //display buttons
    <Button
        android:id="@+id/cancelBtn"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="7%"
        app:layout_marginLeftPercent="0%"
        app:layout_marginTopPercent="8%"
        android:layout_below="@id/classTxt"
        android:layout_alignLeft="@id/classTxt"
        android:background="@drawable/buttonshadow"
        android:text="Cancel" />

    <Button
        android:id="@+id/createBtn"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="8%"
        app:layout_marginRightPercent="0%"
        android:layout_below="@id/classTxt"
        android:layout_alignRight="@id/classTxt"
        android:background="@drawable/buttonshadow"
        android:text="Create" />

</android.support.percent.PercentRelativeLayout>