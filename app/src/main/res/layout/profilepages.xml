<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:theme="@style/profilepage"
    android:background="@drawable/beach1"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp"
        app:layout_scrollFlags="scroll|enterAlways"

        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilephoto"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="115dp"
        android:backgroundTint="#D3D3D3"
        android:background="@drawable/accountcircle"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="0dp"
        />

    <TextView
        android:id="@+id/editbtn"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Photo"
        android:contextClickable="true"
        android:textSize="25dp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="150dp"
        android:elevation="20dp"
        android:shadowColor="#666666"
        android:shadowDx="20"
        android:shadowDy="20"
        android:shadowRadius="20"
        android:textColorHighlight="#0E1010"
        />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18dp"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="50dp"
        />

    <TextView
        android:id="@+id/tvAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textSize="18dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="50dp"
        />

    <ImageView
        android:id="@+id/modeEditName"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="370dp"
        android:background="@drawable/mode_edit"
        android:backgroundTint="#D3D3D3" />

    <ImageView
        android:id="@+id/modeEditAbout"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="480dp"
        android:background="@drawable/mode_edit"
        android:backgroundTint="#D3D3D3" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="314dp"
            android:layout_height="50dp"
            android:layout_marginLeft="46dp"
            android:hint="Name" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="314dp"
            android:layout_height="50dp"
            android:layout_marginLeft="46dp"
            android:hint="About" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/backBtn"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="7%"
        app:layout_marginLeftPercent="12%"
        app:layout_marginTopPercent="80%"
        android:background="@drawable/buttonshadow"
        android:text="Back" />

    <Button
        android:id="@+id/confirmBtn"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="80%"
        app:layout_marginLeftPercent="60%"
        android:background="@drawable/buttonshadow"
        android:text="Confirm" />


</android.support.percent.PercentRelativeLayout>