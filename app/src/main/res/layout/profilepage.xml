<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:theme="@style/profilepage"
    tools:context=".LoginAndHomepagePackage.HomeScreen"
    android:background="@drawable/bs"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp"
        app:layout_scrollFlags="scroll|enterAlways"

        />


    <ImageView
        android:id="@+id/profilephoto"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:padding="1dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="115dp"
        android:backgroundTint="#D3D3D3"
        android:background="@drawable/accountcircle" />

    <TextView
        android:id="@+id/editbtn"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Photo"
        android:textSize="25dp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="150dp"
        />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18dp"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="50dp"
        />

    <TextView
        android:id="@+id/namelbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="50dp"
        />

    <View
        android:layout_width="320dp"
        android:layout_height="2dip"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="40dp"
        android:background="#EEEEEE"
        android:paddingBottom="10dip" />

    <TextView
        android:id="@+id/tvAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textSize="18dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="50dp"
        />

    <TextView
        android:id="@+id/aboutlbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="About"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="50dp"
        />

    <View
        android:layout_width="320dp"
        android:layout_height="2dip"
        android:layout_marginTop="540dp"
        android:layout_marginLeft="40dp"
        android:background="#EEEEEE"
        android:paddingBottom="10dip" />

    <ImageView
        android:id="@+id/modeEditName"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="390dp"
        android:background="@drawable/mode_edit"
        android:backgroundTint="#D3D3D3" />

    <ImageView
        android:id="@+id/modeEditAbout"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/mode_edit"
        android:backgroundTint="#D3D3D3" />



</android.support.percent.PercentRelativeLayout>