<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient05">

    <TextView
        android:id="@+id/title"
        android:text="Settings"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="2%"
        android:layout_centerHorizontal="true"
        android:padding="2dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        app:autoSizeTextType="uniform" />

    <View
        android:layout_below="@id/title"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        app:layout_marginTopPercent="2%"
        android:background="#FFFFFF"
        android:paddingBottom="10dip" />

    //get class
    <Button
        android:id="@+id/changepass"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="8%"
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/title"
        android:background="@drawable/buttonshadow2"
        android:text="Change Password"
        android:bottomRightRadius="10dp"
        android:bottomLeftRadius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"
        app:autoSizeTextType="uniform"
        android:padding="15dp"
        />

    <Button
        android:id="@+id/btndatetime"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="3%"
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/changepass"
        android:background="@drawable/buttonshadow2"
        android:text="TIMEZONE/CURRENCY"
        android:bottomRightRadius="10dp"
        android:bottomLeftRadius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"
        app:autoSizeTextType="uniform"
        android:padding="15dp"
        />

    <TextView
        android:id="@+id/classHeader2"
        android:layout_width="wrap_content"
        android:layout_below="@id/btndatetime"
        android:layout_alignLeft="@id/title"
        android:background="@drawable/buttonshadow2"
        android:gravity="left"
        android:text="\t\t\t\t\tFINGERPRINT"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_heightPercent="8%"
        app:layout_marginLeftPercent="0%"
        app:layout_marginTopPercent="3%"
        app:layout_widthPercent="80%"
        android:bottomRightRadius="10dp"
        android:bottomLeftRadius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"
        app:autoSizeTextType="uniform"
        android:padding="15dp"/>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/btndatetime"
        android:layout_alignRight="@id/classHeader2"
        android:layout_marginRight="25dp"
        android:switchMinWidth="60dp"
        app:layout_marginRightPercent="6%"
        android:theme="@style/SCBSwitch"
        app:layout_marginTopPercent="3%" />

    <Button
        android:id="@+id/btnback"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="7%"
        android:layout_alignLeft="@+id/title"
        android:layout_alignParentBottom="true"
        app:layout_marginBottomPercent="7%"
        android:background="@drawable/buttonblue"
        android:textColor="#FFFFFF"
        app:autoSizeTextType="uniform"
        android:padding="10dp"
        android:text="BACK" />


</android.support.percent.PercentRelativeLayout>