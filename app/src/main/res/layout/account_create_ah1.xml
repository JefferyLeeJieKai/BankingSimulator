<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5">

    <TextView
        android:id="@+id/title"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="2%"
        android:layout_centerHorizontal="true"
        android:text="Create Account"
        android:padding="2dp"
        android:gravity="center"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"/>

    <View
        android:layout_below="@id/title"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        app:layout_marginTopPercent="2%"
        android:background="#000000"
        android:paddingBottom="10dip" />


    <TextView
        android:id="@+id/searchtv"
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/title"
        app:layout_heightPercent="4%"
        app:layout_marginTopPercent="15%"
        app:layout_widthPercent="26%"
        app:autoSizeTextType="uniform"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:text="Search Class:" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/classTxt"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="12%"
        app:layout_widthPercent="45%"
        android:layout_below="@id/title"
        android:gravity="center_vertical"
        android:layout_alignRight="@id/title" >

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Class" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/searchBtn"
        android:layout_alignTop="@id/searchtv"
        app:layout_widthPercent="7%"
        app:layout_heightPercent="4%"
        android:background="@drawable/ic_search_black_24dp"
        android:layout_toRightOf="@id/classTxt"
        android:backgroundTint="#000000"/>

    //get class
    <TextView
        android:layout_alignLeft="@id/searchtv"
        android:layout_below="@id/title"
        app:layout_heightPercent="4%"
        app:layout_marginTopPercent="24%"
        app:layout_widthPercent="12%"
        app:autoSizeTextType="uniform"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:text="Class:" />

    <TextView
        android:id="@+id/classLbl"
        app:layout_heightPercent="4%"
        app:layout_marginTopPercent="24%"
        app:layout_widthPercent="45%"
        android:layout_below="@id/title"
        android:layout_alignRight="@id/title"
        android:gravity="center_vertical"
        android:textColor="#000000"/>

    //get interest rate
    <TextView
        app:layout_heightPercent="4%"
        app:layout_marginTopPercent="33%"
        app:layout_widthPercent="33%"
        android:layout_alignLeft="@id/searchtv"
        android:layout_below="@id/title"
        android:textColor="#000000"
        android:text="Set Interest Rate (%):"
        android:gravity="center_vertical"
        app:autoSizeTextType="uniform"/>

    <TextView
        android:id="@+id/intRateLbl"
        app:layout_widthPercent="45%"
        app:layout_heightPercent="4%"
        android:layout_below="@id/title"
        android:layout_alignRight="@id/title"
        android:textColor="#000000"
        android:gravity="center_vertical"
        app:layout_marginTopPercent="33%" />

    //display button
    <Button
        android:id="@+id/nextBtn"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="75%"
        android:layout_below="@id/title"
        android:layout_alignRight="@id/title"
        android:background="@drawable/buttonblue"
        android:textColor="#FFFFFF"
        android:onClick="login"
        android:padding="15dp"
        android:text="Next"
        app:autoSizeTextType="uniform" />

    <Button
        android:id="@+id/btnback"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="75%"
        android:layout_below="@id/title"
        android:layout_alignLeft="@id/title"
        android:background="@drawable/buttonred"
        android:padding="15dp"
        android:text="Cancel"
        android:textColor="@color/loginButtonText"
        app:autoSizeTextType="uniform" />

</android.support.percent.PercentRelativeLayout>