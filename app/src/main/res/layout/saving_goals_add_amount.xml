<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sun"
    >

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".LoginAndHomepagePackage.HomeScreenUser">

        <include
            layout="@layout/action_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.design.widget.NavigationView
            android:id="@+id/navigation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:menu="@menu/navigation_menu"
            app:headerLayout="@layout/navi_drawer_header" />
    </android.support.v4.widget.DrawerLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVING GOALS"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/navHeaderText"
        android:textSize="25dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp" />

    //display account holder's profile

    <View
        android:background="@drawable/emptyrect"
        app:layout_heightPercent="15%"
        app:layout_marginLeftPercent="8%"
        app:layout_marginTopPercent="15%"
        app:layout_widthPercent="63%" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilephoto"
        android:background="@drawable/accountcircle"
        android:backgroundTint="#D3D3D3"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="0dp"
        app:layout_heightPercent="15%"
        app:layout_marginLeftPercent="9%"
        app:layout_marginTopPercent="15%"
        app:layout_widthPercent="25%" />

    <TextView
        android:id="@+id/usernameLbl"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"
        app:layout_heightPercent="3.5%"
        app:layout_marginLeftPercent="38%"
        app:layout_marginTopPercent="18%"
        app:layout_widthPercent="28%" />

    <TextView
        android:id="@+id/balanceLbl"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"
        app:layout_heightPercent="3.5%"
        app:layout_marginLeftPercent="38%"
        app:layout_marginTopPercent="23%"
        app:layout_widthPercent="28%" />

    //display progress bar

    <TextView
        android:text="Progress (%):"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"
        app:layout_heightPercent="3%"
        app:layout_marginLeftPercent="7%"
        app:layout_marginTopPercent="33.5%"
        app:layout_widthPercent="20%" />

    <TextView
        android:id="@+id/progressLbl"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"
        app:layout_heightPercent="3%"
        app:layout_marginLeftPercent="30%"
        app:layout_marginTopPercent="33.5%"
        app:layout_widthPercent="20%" />

    <ProgressBar
        android:id="@+id/amountPB"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/custom_progressbar"
        app:layout_heightPercent="4%"
        app:layout_marginLeftPercent="7%"
        app:layout_marginTopPercent="38%"
        app:layout_widthPercent="86%" />

    //display amount saved

    <View
        android:background="@drawable/emptyrect"
        app:layout_heightPercent="11%"
        app:layout_marginLeftPercent="7%"
        app:layout_marginTopPercent="43%"
        app:layout_widthPercent="86%" />

    <TextView
        android:text="Amount Saved:"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"
        app:layout_heightPercent="3.5%"
        app:layout_marginLeftPercent="12%"
        app:layout_marginTopPercent="44%"
        app:layout_widthPercent="40%" />

    <TextView
        android:id="@+id/asCurrencyLbl"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"
        app:layout_heightPercent="3.5%"
        app:layout_marginLeftPercent="30%"
        app:layout_marginTopPercent="48%"
        app:layout_widthPercent="12%" />

    <TextView
        android:id="@+id/asLbl"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"
        app:layout_heightPercent="3.5%"
        app:layout_marginLeftPercent="45%"
        app:layout_marginTopPercent="48%"
        app:layout_widthPercent="40%" />

    //display amount remaining

    <View
        android:background="@drawable/emptyrect"
        app:layout_heightPercent="11%"
        app:layout_marginLeftPercent="7%"
        app:layout_marginTopPercent="53.5%"
        app:layout_widthPercent="86%" />

    <TextView
        android:text="Amount Remaining:"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"
        app:layout_heightPercent="3.5%"
        app:layout_marginLeftPercent="12%"
        app:layout_marginTopPercent="55%"
        app:layout_widthPercent="40%" />

    <TextView
        android:id="@+id/arCurrencyLbl"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"
        app:layout_heightPercent="3.5%"
        app:layout_marginLeftPercent="30%"
        app:layout_marginTopPercent="59%"
        app:layout_widthPercent="12%" />

    <TextView
        android:id="@+id/arLbl"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"
        app:layout_heightPercent="3.5%"
        app:layout_marginLeftPercent="45%"
        app:layout_marginTopPercent="59%"
        app:layout_widthPercent="40%" />

    //user input starting from here
    //get goal name

    <TextView
        android:text="Goal Name:"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"
        app:layout_heightPercent="3%"
        app:layout_marginLeftPercent="8%"
        app:layout_marginTopPercent="67%"
        app:layout_widthPercent="20%" />

    <Spinner
        android:id="@+id/goalNameDDL"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="60%"
        app:layout_marginLeftPercent="32%"
        app:layout_marginTopPercent="66%"
        app:autoSizeTextType="uniform" />

    //get amount

    <TextView
        android:text="Add amount:"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"
        app:layout_heightPercent="3%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="77%"
        app:layout_widthPercent="24%" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/amountTxt"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="60%"
        app:layout_marginLeftPercent="32%"
        app:layout_marginTopPercent="74%"
        app:autoSizeTextType="uniform">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount" />
    </android.support.design.widget.TextInputLayout>

    //display buttons

    <Button
        android:id="@+id/confirmBtn"
        app:layout_marginTopPercent="88%"
        app:layout_marginLeftPercent="15%"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="6%"
        android:background="@drawable/buttonshadow"
        android:text="Confirm"
        app:autoSizeTextType="uniform" />

    <Button
        android:id="@+id/cancelBtn"
        app:layout_marginTopPercent="88%"
        app:layout_marginLeftPercent="60%"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="6%"
        android:background="@drawable/buttonshadow"
        android:text="Cancel"
        app:autoSizeTextType="uniform" />

</android.support.percent.PercentRelativeLayout>