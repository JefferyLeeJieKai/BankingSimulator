<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/starfish"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Registration"
        android:textSize="30sp"
        android:layout_marginLeft="100dp"
        android:fontFamily="@font/titan_one"
        android:textColor="#000000"
        android:layout_marginTop="30dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop="90dp"
        android:background="#000000"
        android:paddingBottom="10dip" />

    <TextView
        android:id="@+id/nametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="20dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="135dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColorHint="#000000" />

    <TextView
        android:id="@+id/identitynumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="210dp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="280dp"
        android:text="Username:"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/password"
        android:layout_width="143dp"
        android:layout_height="32dp"
        android:text="Password:"
        android:textSize="20sp"
        android:layout_marginTop="340dp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/cfmpassword"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="400dp"
        android:text="Confirm Pass:"
        android:textColor="#000000"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="460dp"
        android:text="Gender:"
        android:textColor="#000000"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/radioGroupGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="460dp">

        <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_male" />

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_female" />
    </RadioGroup>

    <TextView
        android:id="@+id/datecreated"
        android:layout_width="155dp"
        android:layout_height="51dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="520dp"
        android:text="Date of Birth:"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="112dp"
        android:layout_height="50dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="650dp"
        android:background="@drawable/buttonshadow"
        android:text="Submit" />

    <EditText
        android:id="@+id/emailinput"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="205dp"
        android:ems="10"
        android:hint="Email"
        android:textColorHint="#000000"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/usernameinput"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="275dp"
        android:ems="10"
        android:hint="Username"
        android:textColorHint="#000000" />

    <EditText
        android:id="@+id/passwordinput"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="334dp"
        android:hint="Password"
        android:textColorHint="#000000"
        android:inputType="textPassword"/>
        app:passwordToggleEnabled="true"/>

    <EditText
        android:id="@+id/cfmpasswordinput"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="394dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#000000" />

    <EditText
        android:id="@+id/dateview"
        android:layout_width="217dp"
        android:layout_height="41dp"
        android:textColor="#000000"
        android:hint="Date"
        android:ems="10"
        android:textColorHint="#000000"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="520dp"
        android:clickable="true"
        android:focusable="false"/>

    <TextView
        android:id="@+id/identitytypetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identity Type:"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="577dp"
        android:layout_marginLeft="20dp" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/identitytype"
        android:layout_width="198dp"
        android:layout_height="45dp"
        android:textColor="#000000"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="573dp"
        android:entries="@array/it" />

</RelativeLayout>

    </ScrollView>