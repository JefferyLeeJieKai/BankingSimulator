<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tt"
    tools:context=".registration1">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Registration"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop="90dp"
        android:background="#000000"
        android:paddingBottom="10dip" />


    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/identitytype"
        android:layout_width="198dp"
        android:layout_height="45dp"
        android:textColor="#000000"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="120dp"
        android:entries="@array/it" />

    <TextView
        android:id="@+id/identitytypetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identity Type:"
        android:textColor="#000000"
        android:textSize="24sp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/identitynumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identity Number:"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="230dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="163dp"
        android:layout_height="44dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="220dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        android:hint="NRIC" />

    <TextView
        android:id="@+id/DOB"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="340dp"
        android:text="Date of Birth:"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="163dp"
        android:layout_height="38dp"
        android:hint="DD/MM/YYYY"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textColorHint="#000000"
        android:layout_marginTop="345dp"
        android:layout_marginLeft="200dp" />

    <Button
        android:id="@+id/next"
        android:layout_width="112dp"
        android:layout_height="50dp"
        android:text="Next"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="270dp" />


</RelativeLayout>