<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7E3C4"
    android:angle="45">

    <com.q42.android.scrollingimageview.ScrollingImageView

        android:id="@+id/scrollingImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        app:speed="0.2dp"
        app:src="@drawable/beachchair"
        android:elevation="100dp"
        android:outlineAmbientShadowColor="#000"
        android:padding="100dp"
        android:shadowRadius="200"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="45dp" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/loginposb"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="700dp"
        android:scaleType="fitCenter"
        android:background="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/login1" />

    <ImageButton
        android:id="@+id/transferposb"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="292dp"
        android:layout_marginTop="700dp"
        android:scaleType="fitCenter"
        android:background="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/transfer1" />

    <ImageButton
        android:id="@+id/signup"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="188dp"
        android:layout_marginTop="700dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/signup1" />

</android.support.constraint.ConstraintLayout>