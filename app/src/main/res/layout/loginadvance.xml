<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7E3C4"
    >
    <!--android:angle="45"-->

    <com.q42.android.scrollingimageview.ScrollingImageView

        android:id="@+id/scrollingImageView"
        android:layout_width="match_parent"
        app:layout_heightPercent="10%"
        app:speed="0.2dp"
        app:src="@drawable/beachchair"
        android:outlineAmbientShadowColor="#000"
        android:shadowRadius="200" />


    <ImageButton
        android:id="@+id/loginposb"
        app:layout_widthPercent="15%"
        android:layout_alignParentBottom="true"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="22%"
        app:layout_marginBottomPercent="2%"
        android:scaleType="fitCenter"
        android:background="@null"
        android:src="@drawable/login1" />

    <!--<ImageButton
        android:id="@+id/transferposb"
        app:layout_widthPercent="15%"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="11%"
        app:layout_marginTopPercent="89%"
        android:layout_toRightOf="@id/signup"
        android:scaleType="fitCenter"
        android:background="@null"
        android:src="@drawable/transfer1" /> -->


    <ImageButton
        android:id="@+id/signup"
        app:layout_widthPercent="15%"
        app:layout_heightPercent="10%"
        android:layout_alignParentBottom="true"
        app:layout_marginBottomPercent="2%"
        app:layout_marginLeftPercent="62%"
        android:background="@null"
        android:scaleType="fitCenter"
        android:visibility="visible"
        android:src="@drawable/signup1" />

</android.support.percent.PercentRelativeLayout >