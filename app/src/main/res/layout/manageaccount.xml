<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".LoginAndHomepagePackage.HomeScreenUser"
    android:layout_height="match_parent"
    android:background="@drawable/bg5"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MANAGE ACCOUNT"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp" />


    <ImageButton
        android:id="@+id/createclassbtn"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:scaleType="fitCenter"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="220dp"
        android:background="@null"
        app:srcCompat="@drawable/createclass1" />

    <ImageButton
        android:id="@+id/deleteclassbtn"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:scaleType="fitCenter"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="220dp"
        android:background="@null"
        app:srcCompat="@drawable/deleteclass1" />

    <ImageButton
        android:id="@+id/editclassbtn"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="370dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/editclass1" />

    <ImageButton
        android:id="@+id/viewclassbtn"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="370dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/viewclass" />




</android.support.percent.PercentRelativeLayout>