<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5">

    <TextView
        android:id="@+id/title"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="9%"
        app:layout_marginTopPercent="2%"
        android:layout_centerHorizontal="true"
        android:text="Create Account"
        android:elevation="20dp"
        android:shadowColor="#666666"
        android:shadowDx="20"
        android:shadowDy="20"
        android:fontFamily="@font/titan_one"
        android:shadowRadius="20"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"/>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_below="@id/title"
        android:layout_height="2dip"
        app:layout_marginTopPercent="2%"
        android:background="#000000"
        android:paddingBottom="10dip" />

    //get name
    <TextView
        android:id="@+id/nameview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_alignRight="@id/dobview"
        app:layout_marginTopPercent="7%"
        android:textColor="#000000"
        android:text="Name:" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/nameTxt"
        android:layout_alignRight="@id/title"
        android:layout_below="@id/line1"
        app:layout_widthPercent="56%"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="3%">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:hint="Name" />
    </android.support.design.widget.TextInputLayout>

    //get date of birth
    <TextView
        android:id="@+id/dobview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/nameview"
        app:layout_marginTopPercent="7%"
        android:textColor="#000000"
        android:text="Date Of Birth:" />

    <EditText
        android:id="@+id/DOB"
        app:layout_widthPercent="56%"
        android:layout_alignRight="@id/title"
        android:layout_below="@+id/nameTxt"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="4%"
        android:hint="Select Date" />

    //get phone
    <TextView
        android:id="@+id/phoneview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/nameview"
        android:layout_below="@+id/dobview"
        app:layout_marginTopPercent="7%"
        android:textColor="#000000"
        android:text="Phone:" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/phoneTxt"
        app:layout_widthPercent="56%"
        android:layout_alignRight="@id/title"
        android:layout_below="@id/DOB"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="2%">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:hint="Phone Number" />
    </android.support.design.widget.TextInputLayout>

    //get username
    <TextView
        android:id="@+id/usernameview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/dobview"
        android:layout_below="@+id/phoneview"
        app:layout_marginTopPercent="7%"
        android:textColor="#000000"
        android:text="Username:" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/usernameTxt"
        app:layout_widthPercent="56%"
        android:layout_alignRight="@id/title"
        android:layout_below="@+id/phoneTxt"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="2%">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:hint="Username" />
    </android.support.design.widget.TextInputLayout>

    //get password
    <TextView
        android:id="@+id/passwordview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/dobview"
        android:layout_below="@+id/usernameview"
        app:layout_marginTopPercent="7%"
        android:textColor="#000000"
        android:text="Password:" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/passTxt"
        app:layout_widthPercent="56%"
        android:layout_alignRight="@id/title"
        android:layout_below="@+id/usernameTxt"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="2%">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:hint="Password" />
    </android.support.design.widget.TextInputLayout>

    //get gender
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/dobview"
        android:layout_below="@+id/passwordview"
        app:layout_marginTopPercent="7%"
        android:textColor="#000000"
        android:text="Gender:" />

    <RadioButton
        android:id="@+id/radioMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passTxt"
        android:layout_alignLeft="@id/passTxt"
        app:layout_marginTopPercent="4%"
        android:checked="true"
        android:text="@string/radio_male" />

    <RadioButton
        android:id="@+id/radioFemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/submitBtn"
        android:layout_below="@+id/passTxt"
        app:layout_marginTopPercent="4%"
        android:text="@string/radio_female" />

    //display buttons
    <Button
        android:id="@+id/submitBtn"
        app:layout_widthPercent="25%"
        android:layout_alignRight="@id/title"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        app:layout_marginBottomPercent="10%"
        android:background="@drawable/buttongreen"
        android:text="SUBMIT" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_alignParentBottom="true"
        app:layout_widthPercent="25%"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/title"
        app:layout_marginBottomPercent="10%"
        android:background="@drawable/buttonred"
        android:text="CANCEL" />


</android.support.percent.PercentRelativeLayout>