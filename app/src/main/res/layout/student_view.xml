<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5">

    <TextView
        android:id="@+id/title"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:elevation="20dp"
        android:fontFamily="@font/titan_one"
        android:shadowColor="#666666"
        android:shadowDx="20"
        android:shadowDy="20"
        android:shadowRadius="20"
        android:text="View Student"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"
        app:layout_heightPercent="9%"
        app:layout_marginTopPercent="2%"
        app:layout_widthPercent="66%" />

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        app:layout_marginTopPercent="1%"
        android:background="#000000"
        android:layout_below="@id/title"
        android:paddingBottom="10dip" />

    //search class
    <TextView
        android:id="@+id/searchtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/title"
        app:layout_marginTopPercent="4%"
        android:layout_below="@+id/line1"
        android:textColor="#000000"
        android:text="Search Student:" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/classTxt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_marginLeftPercent="35%"
        android:layout_below="@+id/searchtv"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/studentinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Class" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/searchBtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_search_black_24dp"
        android:backgroundTint="#000000"
        android:layout_alignRight="@+id/title"
        app:layout_marginTopPercent="3%"
        android:layout_below="@id/searchtv"
        />

    //get class
    <TextView
        android:id="@+id/classview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/classTxt"
        app:layout_marginTopPercent="3%"
        android:layout_below="@id/classTxt"
        android:textColor="#000000"
        android:text="Class:" />

    <TextView
        android:id="@+id/classLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/classTxt"
        android:layout_toRightOf="@+id/classview"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="3%" />

    //get interest rate
    <TextView
        android:id="@+id/interestview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/classview"
        android:layout_alignRight="@id/classview"
        app:layout_marginTopPercent="3%"
        android:textColor="#000000"
        android:text="Set Interest Rate (%):" />

    <TextView
        android:id="@+id/intRateLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/classview"
        android:layout_toRightOf="@id/interestview"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="3%" />

    //display AH information -> link with account_ah_recycler_row_layout

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ahDetailsRv"
        app:layout_widthPercent="90%"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        app:layout_marginTopPercent="1%" />

    <TextView
        android:id="@+id/nameview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interestview"
        android:layout_alignLeft="@id/ahDetailsRv"
        app:layout_marginTopPercent="5%"
        android:text="Name"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interestview"
        android:layout_alignRight="@+id/ahDetailsRv"
        app:layout_marginLeftPercent="8%"
        app:layout_marginTopPercent="5%"
        android:text="Password"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interestview"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="5%"
        android:text="Interest Rate"
        android:textColor="#000000" />

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/nameview"
        android:layout_marginTop="7dp"
        android:background="#000000"
        android:paddingBottom="10dip"
        app:layout_marginTopPercent="1%" />

    <Button
        android:id="@+id/AddStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/classTxt"
        android:layout_alignRight="@id/title"
        android:background="@drawable/buttonshadow"
        android:padding="1dp"
        android:text="Add Student"
        app:autoSizeTextType="uniform"
        app:layout_heightPercent="5%"
        app:layout_marginTopPercent="7%"
        app:layout_widthPercent="15%" />

    <Button
        android:id="@+id/buttonback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_alignParentBottom="true"
        app:layout_marginBottomPercent="6%"
        app:layout_widthPercent="66%"
        android:background="@drawable/buttonshadow"
        android:text="BACK" />

</android.support.percent.PercentRelativeLayout>