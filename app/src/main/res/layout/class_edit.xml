<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5">

    <TextView
        android:id="@+id/title"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="2%"
        android:layout_centerHorizontal="true"
        android:padding="2dp"
        android:gravity="center"
        android:text="Edit Class"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"/>

    <View
        android:layout_below="@id/title"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        app:layout_marginTopPercent="2%"
        android:background="#000000"
        android:paddingBottom="10dip" />

    //get current class name
    <TextView
        android:id="@+id/text"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title"
        android:autoSizeTextType="uniform"
        android:background="#CCFFFFFF"
        android:text="Class name"
        android:textColor="#000000"
        app:layout_heightPercent="8%"
        app:layout_marginLeftPercent="0%"
        app:layout_marginTopPercent="10%"
        app:layout_widthPercent="80%"
        android:padding="10dp"
        app:autoSizeTextType="uniform"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/classLbl"
        app:layout_widthPercent="80%"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:background="#CCFFFFFF">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:hint="Enter a class" />
    </android.support.design.widget.TextInputLayout>

    //get new class
    <TextView
        android:id="@+id/newclass"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title"
        android:autoSizeTextType="uniform"
        android:background="#CCFFFFFF"
        android:text="New Class name"
        android:textColor="#000000"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="35%"
        app:layout_widthPercent="80%"
        android:padding="10dp"
        app:autoSizeTextType="uniform"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/classTxt"
        app:layout_widthPercent="80%"
        android:layout_height="wrap_content"
        android:layout_below="@id/newclass"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:background="#CCFFFFFF"
        android:textColor="#000000" >

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:hint="Enter a new class name" />
    </android.support.design.widget.TextInputLayout>

    //buttons
    //display buttons
    <Button
        android:id="@+id/cancelBtn"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="75%"
        android:layout_below="@id/title"
        android:layout_alignLeft="@id/title"
        android:textColor="#FFFFFF"
        android:padding="15dp"
        android:background="@drawable/buttonred"
        android:text="Cancel" />

    <Button
        android:id="@+id/confirmBtn"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="75%"
        android:layout_below="@id/title"
        android:layout_alignRight="@id/title"
        android:background="@drawable/buttonblue"
        android:padding="15dp"
        android:textColor="#FFFFFF"
        android:text="Confirm" />

</android.support.percent.PercentRelativeLayout>