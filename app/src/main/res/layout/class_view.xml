<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient11">

    <TextView
        android:id="@+id/title"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="2%"
        android:layout_centerHorizontal="true"
        android:text="VIEW CLASS"
        android:padding="3dp"
        android:gravity="center"
        android:textColor="#000000"
        app:autoSizeTextType="uniform" />

    <View
        android:layout_below="@id/title"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        app:layout_marginTopPercent="2%"
        android:background="#000000"
        android:paddingBottom="10dip" />

    <TextView
        app:layout_heightPercent="3%"
        app:layout_widthPercent="19%"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@id/classDetailsRv"
        app:layout_marginTopPercent="5%"
        android:gravity="center_vertical"
        android:text="Class Name"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"
        />

    <TextView
        app:layout_heightPercent="3%"
        app:layout_widthPercent="30%"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        app:layout_marginTopPercent="5%"
        android:text="No. of Students"
        android:textColor="#000000"
        app:autoSizeTextType="uniform" />

    <TextView
        app:layout_heightPercent="3%"
        app:layout_widthPercent="25%"
        android:layout_below="@+id/title"
        android:layout_alignRight="@+id/classDetailsRv"
        app:layout_marginLeftPercent="8%"
        app:layout_marginTopPercent="5%"
        android:gravity="center_vertical"
        android:text="Manage class"
        android:textColor="#000000"
        app:autoSizeTextType="uniform" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/classDetailsRv"
        app:layout_widthPercent="90%"
        android:layout_centerHorizontal="true"
        app:layout_heightPercent="60%"
        android:layout_below="@id/title"
        app:layout_marginTopPercent="10%" />

    <Button
        android:id="@+id/buttonback"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="7%"
        android:layout_alignLeft="@+id/title"
        android:layout_centerHorizontal="true"
        app:layout_marginBottomPercent="7%"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttonblue"
        android:textColor="@color/loginButtonText"
        android:padding="12dp"
        app:autoSizeTextType="uniform"
        android:text="BACK" />

</android.support.percent.PercentRelativeLayout>