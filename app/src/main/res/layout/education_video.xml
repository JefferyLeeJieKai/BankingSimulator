<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beach08"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="9%"
        app:layout_marginTopPercent="2%"
        android:layout_centerHorizontal="true"
        android:text="EDUCATIONAL VIDEOS"
        android:gravity="center"
        android:elevation="20dp"
        android:shadowColor="#666666"
        android:shadowDx="20"
        android:shadowDy="20"
        android:fontFamily="@font/titan_one"
        android:shadowRadius="20"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"/>

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_below="@+id/textView"
        android:layout_height="2dip"
        app:layout_marginTopPercent="2%"
        android:background="#000000"
        android:paddingBottom="10dip" />

    <android.support.v7.widget.RecyclerView

        android:id="@+id/recyclerView"
        android:layout_below="@id/line1"
        android:layout_width="match_parent"
        app:layout_heightPercent="63%"
        app:layout_marginTopPercent="7%"
        >

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/button"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="7%"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:layout_marginBottomPercent="6%"
        android:background="@drawable/buttonblue"
        android:textColor="@color/buttonWord"
        android:fontFamily="@font/titan_one"
        android:text="BACK" />

</android.support.percent.PercentRelativeLayout>