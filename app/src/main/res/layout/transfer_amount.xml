<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRANSFER FUNDS"
        android:textSize="25dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="10dp" />

    //display payee's information

    <ImageView
        android:id="@+id/payeeAvatar"
        android:layout_width="87dp"
        android:layout_height="110dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp"
        tools:srcCompat="@tools:sample/avatars" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/payeeLbl"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="235dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Payee AccNo. / Username" />
    </android.support.design.widget.TextInputLayout>

    //display payer's information
    <ImageView
        android:id="@+id/payerAvatar"
        android:layout_width="87dp"
        android:layout_height="110dp"
        android:layout_marginLeft="265dp"
        android:layout_marginTop="120dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/payerLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="265dp"
        android:layout_marginTop="235dp"
        android:text="payer's name" />

    //user input starting from here
    //get amount
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="295dp"
        android:text="Amount:" />

    <TextView
        android:id="@+id/currencyLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="325dp"
        android:text="SGD" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/amountTxt"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="300dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount" />
    </android.support.design.widget.TextInputLayout>

    //display limit
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="370dp"
        android:text="Authorised Daily Limit:" />

    <TextView
        android:id="@+id/limitLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="370dp"
        android:text="auto limit" />

    //display remaining limit
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="400dp"
        android:text="Remaining Daily Limit:" />

    <TextView
        android:id="@+id/remainingLimitLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="400dp"
        android:text="auto limit" />

    //get purpose
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="440dp"
        android:text="Purpose:" />

    <Spinner
        android:id="@+id/purposeDDL"
        android:layout_width="285dp"
        android:layout_height="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="470dp" />

    //display button
    <Button
        android:id="@+id/nextBtn"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="525dp"
        android:background="@drawable/buttonshadow"
        android:text="Next" />

</android.support.percent.PercentRelativeLayout>