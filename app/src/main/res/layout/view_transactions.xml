<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beach18">

    <TextView
        android:id="@+id/textView"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="9%"
        app:layout_marginTopPercent="2%"
        android:layout_centerHorizontal="true"
        android:text="Transactions"
        android:elevation="20dp"
        android:shadowColor="#666666"
        android:shadowDx="20"
        android:shadowDy="20"
        android:fontFamily="@font/titan_one"
        android:shadowRadius="20"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"  />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        app:layout_marginTopPercent="12%"
        android:background="#000000"
        android:paddingBottom="10dip" />

    //display account holder's profile
    <View
        android:id="@+id/accdetails"
        app:layout_heightPercent="17%"
        app:layout_widthPercent="80%"
        app:layout_marginTopPercent="17%"
        android:layout_centerHorizontal="true"
        android:background="@drawable/emptyrect" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilephoto"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignLeft="@id/accdetails"
        android:layout_alignTop="@id/accdetails"
        app:layout_marginLeftPercent="2%"
        android:backgroundTint="#D3D3D3"
        android:background="@drawable/accountcircle"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="0dp"
        />

    <TextView
        android:id="@+id/usernameLbl"
        android:layout_alignRight="@id/accdetails"
        android:layout_alignTop="@id/accdetails"
        app:layout_widthPercent="49%"
        app:layout_heightPercent="4%"
        android:textColor="#000000"
        app:layout_marginLeftPercent="2%"
        app:layout_marginTopPercent="2%"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/balanceLbl"
        android:layout_alignRight="@id/accdetails"
        android:layout_alignTop="@id/accdetails"
        app:layout_widthPercent="49%"
        app:layout_heightPercent="4%"
        android:textColor="#000000"
        app:layout_marginLeftPercent="2%"
        app:layout_marginTopPercent="9%"
        android:textSize="20dp" />

    //display all transactions
    <android.support.v7.widget.RecyclerView
        android:id="@+id/transactionsDetailsRv"
        android:background="#CCEEEEEE"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="35%"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="49%"
        />

    <TextView
        android:layout_alignLeft="@id/transactionsDetailsRv"
        android:layout_alignTop="@id/textView"
        app:layout_heightPercent="3%"
        app:layout_widthPercent="20%"
        app:layout_marginTopPercent="39%"
        android:text="Description"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/Amount"
        android:layout_alignRight="@id/transactionsDetailsRv"
        android:layout_alignTop="@id/textView"
        app:layout_heightPercent="3%"
        app:layout_widthPercent="38%"
        app:layout_marginTopPercent="39%"
        android:text="Amount"
        android:textColor="#000000" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        app:layout_marginTopPercent="46%"
        android:background="#000000"
        android:paddingBottom="10dip" />

    <Button
        android:id="@+id/backbtn"
        android:layout_alignLeft="@id/textView"
        android:layout_alignParentBottom="true"
        app:layout_marginBottomPercent="5%"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="7%"
        android:background="@drawable/buttonblue"
        android:textColor="@color/buttonWord"
        android:fontFamily="@font/titan_one"
        android:text="BACK" />


</android.support.percent.PercentRelativeLayout>