<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5">

    <TextView
        android:id="@+id/title"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="9%"
        app:layout_marginTopPercent="2%"
        android:layout_centerHorizontal="true"
        android:text="Delete Class"
        android:padding="5dp"
        android:gravity="center"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        app:layout_marginTopPercent="13%"
        android:background="#000000"
        android:paddingBottom="10dip" />

    //search class
    <TextView
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/title"
        app:layout_heightPercent="4%"
        app:layout_marginTopPercent="9%"
        app:layout_widthPercent="24%"
        android:padding="3dp"
        android:textColor="#000000"
        android:text="Search Class:"
        app:autoSizeTextType="uniform"/>

    <android.support.design.widget.TextInputLayout
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/title"
        android:id="@+id/classTxt"
        android:layout_width="150dp"
        android:padding="3dp"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="25%"
        app:layout_marginTopPercent="6%">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Class" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/searchBtn"
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/title"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_search_black_24dp"
        android:backgroundTint="#000000"
        app:layout_marginLeftPercent="62%"
        app:layout_marginTopPercent="9%" />

    //get class
    <TextView
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/title"
        android:textColor="#000000"
        android:text="Class:"
        app:layout_heightPercent="3%"
        app:layout_widthPercent="14%"
        app:layout_marginTopPercent="21%"
        android:padding="2dp"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/classLbl"
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/title"
        app:layout_heightPercent="3%"
        app:layout_widthPercent="40%"
        app:layout_marginTopPercent="21%"
        app:layout_marginLeftPercent="36%"
        android:padding="3dp"
        app:autoSizeTextType="uniform" />

    //get interest rate
    <TextView
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/title"
        android:textColor="#000000"
        android:text="Set Interest Rate (%):"
        app:layout_heightPercent="3%"
        app:layout_widthPercent="31%"
        app:layout_marginTopPercent="27%"
        android:padding="2dp"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/intRateLbl"
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/title"
        app:layout_heightPercent="3%"
        app:layout_widthPercent="40%"
        app:layout_marginTopPercent="27%"
        app:layout_marginLeftPercent="36%"
        android:padding="3dp"
        app:autoSizeTextType="uniform" />

    //display AH information -> link with account_delete_recycler_row_layout

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ahDetailsRv"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="380dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="330dp"
        android:text="Name"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="330dp"
        android:text="Account No."
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="330dp"
        android:text="Username"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="330dp"
        android:text="Password"
        android:textColor="#000000" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="365dp"
        android:background="#000000"
        android:paddingBottom="10dip" />

    //display buttons

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="620dp"
        android:background="@drawable/buttonshadow"
        android:text="DELETE" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="620dp"
        android:background="@drawable/buttonshadow"
        android:text="CANCEL" />

</android.support.percent.PercentRelativeLayout>