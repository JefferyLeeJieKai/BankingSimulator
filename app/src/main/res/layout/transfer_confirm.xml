<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".LoginAndHomepagePackage.HomeScreenUser">

        <include
            layout="@layout/action_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.design.widget.NavigationView
            android:id="@+id/navigation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:menu="@menu/navigation_menu"
            app:headerLayout="@layout/navi_drawer_header" />
    </android.support.v4.widget.DrawerLayout>

    <TextView
        app:layout_widthPercent="62%"
        app:layout_heightPercent="6%"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="1%"
        android:gravity="center"
        android:text="TRANSFER FUNDS"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/navHeaderText"
        app:autoSizeTextType="uniform"
        />

    //header
    <TextView
        app:layout_widthPercent="35%"
        app:layout_heightPercent="3%"
        app:layout_marginLeftPercent="9%"
        app:layout_marginTopPercent="15%"
        android:text="Verify transfer details:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:autoSizeTextType="uniform"/>

    //display information starting from here
    //display payer's profile
    <TextView
        app:layout_widthPercent="9%"
        app:layout_heightPercent="3%"
        app:layout_marginLeftPercent="13%"
        app:layout_marginTopPercent="30%"
        android:text="From:"
        app:autoSizeTextType="uniform" />

    <View
        app:layout_widthPercent="65%"
        app:layout_heightPercent="15%"
        app:layout_marginLeftPercent="27%"
        app:layout_marginTopPercent="25%" />

    <ImageView
        android:id="@+id/payerAvatar"
        app:layout_widthPercent="21%"
        app:layout_heightPercent="15%"
        app:layout_marginLeftPercent="27%"
        app:layout_marginTopPercent="25%"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/payerLbl"
        app:layout_widthPercent="38%"
        app:layout_heightPercent="3%"
        app:layout_marginLeftPercent="50%"
        app:layout_marginTopPercent="27%"
        android:text="auto generate username"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/payerAccountLbl"
        app:layout_widthPercent="32%"
        app:layout_heightPercent="3%"
        app:layout_marginLeftPercent="50%"
        app:layout_marginTopPercent="32%"
        android:text="auto account number"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/payerBankLbl"
        app:layout_widthPercent="23%"
        app:layout_heightPercent="3%"
        app:layout_marginLeftPercent="50%"
        app:layout_marginTopPercent="35%"
        android:text="auto bank name"
        app:autoSizeTextType="uniform" />

    //display payee's profile
    <TextView
        app:layout_widthPercent="5%"
        app:layout_heightPercent="3%"
        app:layout_marginLeftPercent="13%"
        app:layout_marginTopPercent="48%"
        android:text="To:"
        app:autoSizeTextType="uniform" />

    <View
        android:layout_width="265dp"
        android:layout_height="110dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="310dp" />

    <ImageView
        android:id="@+id/payeeAvatar"
        app:layout_widthPercent="21%"
        app:layout_heightPercent="15%"
        app:layout_marginLeftPercent="27%"
        app:layout_marginTopPercent="42.5%"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/payeeLbl"
        app:layout_widthPercent="38%"
        app:layout_heightPercent="3%"
        app:layout_marginLeftPercent="50%"
        app:layout_marginTopPercent="44%"
        android:text="auto generate username"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/payeeAccountLbl"
        app:layout_widthPercent="32%"
        app:layout_heightPercent="3%"
        app:layout_marginLeftPercent="50%"
        app:layout_marginTopPercent="49.5%"
        android:text="auto account number"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/payeeBankLbl"
        app:layout_widthPercent="23%"
        app:layout_heightPercent="3%"
        app:layout_marginLeftPercent="50%"
        app:layout_marginTopPercent="52.5%"
        android:text="auto bank name"
        app:autoSizeTextType="uniform"/>

    //display amount
    <TextView
        app:layout_widthPercent="13%"
        app:layout_heightPercent="3%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginTopPercent="60%"
        android:text="Amount:"
        app:autoSizeTextType="uniform" />

    <TextView
        app:layout_widthPercent="8%"
        app:layout_heightPercent="3%"
        app:layout_marginLeftPercent="27%"
        app:layout_marginTopPercent="60%"
        android:text="SGD"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/amountLbl"
        app:layout_widthPercent="37%"
        app:layout_heightPercent="3%"
        app:layout_marginLeftPercent="37%"
        app:layout_marginTopPercent="60%"
        android:text="$ auto generate amount"
        app:autoSizeTextType="uniform" />

    //display date
    <TextView
        app:layout_widthPercent="9%"
        app:layout_heightPercent="3%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginTopPercent="64%"
        android:text="Date:"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/dateLbl"
        app:layout_widthPercent="30%"
        app:layout_heightPercent="3%"
        app:layout_marginLeftPercent="27%"
        app:layout_marginTopPercent="64%"
        android:text="auto generate date"
        app:autoSizeTextType="uniform" />

    //display additional comments
    <TextView
        app:layout_widthPercent="15%"
        app:layout_heightPercent="3%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginTopPercent="69%"
        android:text="Additional"
        app:autoSizeTextType="uniform" />

    <TextView
        app:layout_widthPercent="16%"
        app:layout_heightPercent="3%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginTopPercent="72%"
        android:text="Comments:"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/commentLbl"
        app:layout_widthPercent="63%"
        app:layout_heightPercent="7%"
        app:layout_marginLeftPercent="27%"
        app:layout_marginTopPercent="69%"
        android:text="auto generate comments" />

    //display purpose
    <TextView
        app:layout_widthPercent="13%"
        app:layout_heightPercent="3%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginTopPercent="78%"
        android:text="Purpose:"
        app:autoSizeTextType="uniform" />

    <TextView
        app:layout_widthPercent="40%"
        app:layout_heightPercent="2.6%"
        app:layout_marginLeftPercent="27%"
        app:layout_marginTopPercent="78%"
        android:text="auto generate purpose"
        app:autoSizeTextType="uniform" />

    //display buttons
    <Button
        android:id="@+id/confirmBtn"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="6%"
        app:layout_marginLeftPercent="15%"
        app:layout_marginTopPercent="86%"
        android:background="@drawable/buttonshadow"
        android:text="Confirm"
        app:autoSizeTextType="uniform" />

    <Button
        android:id="@+id/cancelBtn"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="6%"
        app:layout_marginLeftPercent="66%"
        app:layout_marginTopPercent="86%"
        android:background="@drawable/buttonshadow"
        android:text="Cancel" />

</android.support.percent.PercentRelativeLayout>