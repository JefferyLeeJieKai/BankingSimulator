<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="Account No:"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_heightPercent="4%"
        app:layout_marginLeftPercent="7%"
        app:layout_marginTopPercent="38%"
        app:layout_widthPercent="26%" />

    <TextView
        android:text="Current Balance:"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_heightPercent="4%"
        app:layout_marginLeftPercent="7%"
        app:layout_marginTopPercent="44%"
        app:layout_widthPercent="34%" />

    <TextView
        android:id="@+id/actualAccountNo"
        android:textSize="18dp"
        app:layout_heightPercent="4%"
        app:layout_marginLeftPercent="34%"
        app:layout_marginTopPercent="38%"
        app:layout_widthPercent="56%" />

    <TextView
        android:id="@+id/actualCurrentBalance"
        android:textSize="18dp"
        app:layout_heightPercent="4%"
        app:layout_marginLeftPercent="43%"
        app:layout_marginTopPercent="44%"
        app:layout_widthPercent="48%" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dip"
        android:background="#000000"
        android:paddingBottom="10dip"
        android:layout_marginTop="260dp"
        />


    <ImageButton
        android:id="@+id/viewquizresult"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_heightPercent="12%"
        app:layout_marginLeftPercent="39%"
        app:layout_marginTopPercent="52%"
        app:layout_widthPercent="21%"
        app:srcCompat="@drawable/quizresult" />

    <ImageButton
        android:id="@+id/bankerdepositfunds"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_heightPercent="12%"
        app:layout_marginLeftPercent="69%"
        app:layout_marginTopPercent="52%"
        app:layout_widthPercent="21%"
        app:srcCompat="@drawable/deposit" />

    <ImageButton
        android:id="@+id/bankertransactions"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_heightPercent="12%"
        app:layout_marginLeftPercent="8%"
        app:layout_marginTopPercent="52%"
        app:layout_widthPercent="21%"
        app:srcCompat="@drawable/viewtransaction" />

    <ImageButton
        android:id="@+id/bankermanageaccount"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_heightPercent="12%"
        app:layout_marginLeftPercent="24%"
        app:layout_marginTopPercent="68%"
        app:layout_widthPercent="21%"
        app:srcCompat="@drawable/manageaccount" />

    <ImageButton
        android:id="@+id/settings"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_heightPercent="12%"
        app:layout_marginLeftPercent="54%"
        app:layout_marginTopPercent="68%"
        app:layout_widthPercent="21%"
        app:srcCompat="@drawable/settings" />

    <TextView
        android:id="@+id/textView4"
        android:text="Welcome to KidzSmart, Bob"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#0E1010"
        android:textSize="30sp"
        app:layout_heightPercent="18%"
        app:layout_marginLeftPercent="6%"
        app:layout_marginTopPercent="16%"
        app:layout_widthPercent="70%" />

</android.support.percent.PercentRelativeLayout>