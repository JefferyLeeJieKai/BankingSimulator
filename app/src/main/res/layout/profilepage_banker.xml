<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:theme="@style/profilepage"
    android:background="@drawable/bg10"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp"
        app:layout_scrollFlags="scroll|enterAlways"

        />



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilephoto"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="115dp"
        android:backgroundTint="#D3D3D3"
        android:background="@drawable/accountcircle"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="0dp"
        />

    <TextView
        android:id="@+id/editbtn"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Photo"
        android:elevation="20dp"
        android:shadowColor="#666666"
        android:shadowDx="20"
        android:shadowDy="20"
        android:shadowRadius="20"
        android:textColorHighlight="#0E1010"
        android:contextClickable="true"
        android:textSize="25dp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="150dp"
        />

    <TextView
        android:text="Progress (%):"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"
        app:layout_heightPercent="3%"
        app:layout_marginLeftPercent="7%"
        app:layout_marginTopPercent="33.5%"
        app:layout_widthPercent="20%" />

    <ProgressBar
        android:id="@+id/amountPB"
        style="@android:style/Widget.ProgressBar.Horizontal"
        app:layout_heightPercent="4%"
        app:layout_marginLeftPercent="7%"
        app:layout_marginTopPercent="38%"
        app:layout_widthPercent="86%" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18dp"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="50dp"
        />

    <ImageView
        android:id="@+id/modeEditName"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/mode_edit"
        android:backgroundTint="#86888A" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/usersName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="314dp"
            android:layout_height="50dp"
            android:layout_marginLeft="46dp"
            android:hint="Name" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/aboutUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="18dp"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="50dp"
        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="314dp"
            android:layout_height="50dp"
            android:layout_marginLeft="46dp"
            android:hint="Email" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/modeEditEmail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="560dp"
        android:background="@drawable/mode_edit"
        android:backgroundTint="#86888A" />

    <Button
        android:id="@+id/backBtn"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="7%"
        app:layout_marginLeftPercent="12%"
        app:layout_marginTopPercent="88%"
        android:background="@drawable/buttonshadow"
        android:text="Back" />

    <Button
        android:id="@+id/confirmBtn"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="88%"
        app:layout_marginLeftPercent="50%"
        android:background="@drawable/buttonshadow"
        android:layout_alignLeft="@+id/backBtn"
        android:text="Confirm" />


</android.support.percent.PercentRelativeLayout>