<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:background="@drawable/beach19"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/headerQuiz"
        android:text="QUIZ TIME!"
        android:textColor="#000000"

        android:fontFamily="@font/titan_one"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        app:layout_marginTopPercent="5%"
        app:layout_widthPercent="70%"
        app:layout_heightPercent="10%"
        app:autoSizeTextType="uniform" />

    <TextView
        android:text="1. Answer a total of 5 questions.\n 2. You have 30sec for each question."
        android:textColor="#000000"
        android:background="#CCFFFFFF"
        android:layout_below="@id/headerQuiz"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="5%"
        app:layout_widthPercent="70%"
        app:layout_heightPercent="15%"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/HighScore"
        android:fontFamily="@font/titan_one"
        android:text="HighScore: 0"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_below="@id/headerQuiz"
        app:layout_heightPercent="8%"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="30%"
        app:layout_widthPercent="70%"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/CurrScore"
        android:layout_below="@id/HighScore"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/titan_one"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="26dp"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="3%"
        app:layout_widthPercent="60%"
        app:autoSizeTextType="uniform" />

    <Button
        android:id="@+id/button_start_quiz"
        android:layout_below="@id/CurrScore"
        android:layout_centerHorizontal="true"
        android:background="@color/buttonBG"
        android:textColor="@color/buttonWord"
        android:text="Start Quiz"
        app:layout_heightPercent="6%"
        app:layout_marginTopPercent="20%"
        app:layout_widthPercent="70%"
        app:autoSizeTextType="uniform" />

</android.support.percent.PercentRelativeLayout>