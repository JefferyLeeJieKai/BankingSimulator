<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SETTINGS"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="110dp" />

    //get date
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="20%"
        app:layout_marginLeftPercent="18%"
        android:textStyle="bold"
        android:text="DATE:" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="20%"
        app:layout_marginLeftPercent="35%"
        android:text="auto-date" />

    //get time
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="29%"
        app:layout_marginLeftPercent="18%"
        android:textStyle="bold"
        android:text="TIME:" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="29%"
        app:layout_marginLeftPercent="35%"
        android:text="auto-time" />

    //get timezone
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="38%"
        app:layout_marginLeftPercent="10%"
        android:textStyle="bold"
        android:text="TIMEZONE:" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="38%"
        app:layout_marginLeftPercent="35%"
        android:text="auto-timezone" />

    //get currency
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="47%"
        app:layout_marginLeftPercent="10%"
        android:textStyle="bold"
        android:text="CURRENCY:" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="47%"
        app:layout_marginLeftPercent="35%"
        android:text="auto-currency" />

    //display buttons
    <Button
        android:id="@+id/editDateBtn"
        android:layout_height="wrap_content"
        app:layout_widthPercent="20%"
        app:layout_marginTopPercent="18%"
        app:layout_marginLeftPercent="70%"
        android:text="Edit" />

    <Button
        android:id="@+id/editTimeBtn"
        android:layout_height="wrap_content"
        app:layout_widthPercent="20%"
        app:layout_marginTopPercent="27%"
        app:layout_marginLeftPercent="70%"
        android:text="Edit" />

    <Button
        android:id="@+id/editTimezoneBtn"
        android:layout_height="wrap_content"
        app:layout_widthPercent="20%"
        app:layout_marginTopPercent="36%"
        app:layout_marginLeftPercent="70%"
        android:text="Edit" />

    <Button
        android:id="@+id/editCurrencyBtn"
        android:layout_height="wrap_content"
        app:layout_widthPercent="20%"
        app:layout_marginTopPercent="45%"
        app:layout_marginLeftPercent="70%"
        android:text="Edit" />

    <Button
        android:id="@+id/confirmBtn"
        android:layout_height="wrap_content"
        app:layout_widthPercent="31%"
        app:layout_marginTopPercent="60%"
        app:layout_marginLeftPercent="16%"
        android:text="Confirm" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_height="wrap_content"
        app:layout_widthPercent="31%"
        app:layout_marginTopPercent="60%"
        app:layout_marginLeftPercent="56%"
        android:text="Cancel" />

</android.support.percent.PercentRelativeLayout>