<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/starfish"
    >

    <android.support.percent.PercentRelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="9%"
            app:layout_marginTopPercent="2%"
            android:layout_centerHorizontal="true"
            android:text="Registration"
            android:elevation="20dp"
            android:shadowColor="#666666"
            android:shadowDx="20"
            android:shadowDy="20"
            android:fontFamily="@font/titan_one"
            android:shadowRadius="20"
            android:textColor="#000000"
            app:autoSizeTextType="uniform"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_marginTop="90dp"
            android:background="#000000"
            android:paddingBottom="10dip" />

        <TextView
            android:id="@+id/name"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="6%"
            android:layout_below="@id/title"
            android:layout_alignLeft="@id/title"
            app:layout_marginLeftPercent="0%"
            app:layout_marginTopPercent="5%"
            android:text="Name"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@drawable/username_field"
            app:autoSizeTextType="uniform" />

        <EditText
            android:id="@+id/nameinput"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="6%"
            android:layout_below="@id/name"
            android:layout_alignLeft="@id/title"
            app:layout_marginLeftPercent="0%"
            android:layout_marginTop="-5dp"
            android:ems="10"
            android:hint="Enter your name"
            android:inputType="textPersonName"
            android:textColorHint="#66000000"
            android:textStyle="italic"
            android:background="@drawable/password_field"
            app:autoSizeTextType="uniform"/>

        <TextView
            android:id="@+id/email"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="6%"
            android:layout_below="@id/nameinput"
            android:layout_alignLeft="@id/title"
            app:layout_marginLeftPercent="0%"
            app:layout_marginTopPercent="2%"
            android:text="Email"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@drawable/username_field"
            app:autoSizeTextType="uniform" />

        <EditText
            android:id="@+id/emailinput"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="6%"
            android:layout_below="@id/email"
            android:layout_alignLeft="@id/title"
            app:layout_marginLeftPercent="0%"
            android:layout_marginTop="-5dp"
            android:ems="10"
            android:hint="Enter your email address"
            android:inputType="textPersonName"
            android:textColorHint="#66000000"
            android:textStyle="italic"
            android:background="@drawable/password_field"
            app:autoSizeTextType="uniform"/>

        <TextView
            android:id="@+id/username"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="6%"
            android:layout_below="@id/emailinput"
            android:layout_alignLeft="@id/title"
            app:layout_marginLeftPercent="0%"
            app:layout_marginTopPercent="2%"
            android:text="Username"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@drawable/username_field"
            app:autoSizeTextType="uniform" />

        <EditText
            android:id="@+id/usernameinput"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="6%"
            android:layout_below="@id/username"
            android:layout_alignLeft="@id/title"
            app:layout_marginLeftPercent="0%"
            android:layout_marginTop="-5dp"
            android:ems="10"
            android:hint="Enter desired username"
            android:inputType="textPersonName"
            android:textColorHint="#66000000"
            android:textStyle="italic"
            android:background="@drawable/password_field"
            app:autoSizeTextType="uniform"/>

        <TextView
            android:id="@+id/password"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="6%"
            android:layout_below="@id/usernameinput"
            android:layout_alignLeft="@id/title"
            app:layout_marginLeftPercent="0%"
            app:layout_marginTopPercent="2%"
            android:text="Password"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@drawable/username_field"
            app:autoSizeTextType="uniform"/>

        <EditText
            android:id="@+id/passwordinput"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="6%"
            android:layout_below="@id/password"
            android:layout_alignLeft="@id/title"
            app:layout_marginLeftPercent="0%"
            android:layout_marginTop="-5dp"
            android:ems="10"
            android:hint="Enter desired password"
            android:textColorHint="#66000000"
            android:textStyle="italic"
            android:inputType="textPassword"
            android:background="@drawable/middle_field"
            app:autoSizeTextType="uniform"/>

        <EditText
            android:id="@+id/cfmpasswordinput"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="6%"
            android:layout_below="@id/passwordinput"
            android:layout_alignLeft="@id/title"
            app:layout_marginLeftPercent="0%"
            android:layout_marginTop="-5dp"
            android:ems="10"
            android:hint="Re-enter desired password"
            android:textColorHint="#66000000"
            android:textStyle="italic"
            android:inputType="textPassword"
            android:background="@drawable/password_field"
            app:autoSizeTextType="uniform"/>

        <TextView
            android:id="@+id/birthday"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="6%"
            android:layout_below="@id/cfmpasswordinput"
            android:layout_alignLeft="@id/title"
            app:layout_marginLeftPercent="0%"
            app:layout_marginTopPercent="2%"
            android:text="Birthday"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@drawable/username_field"
            app:autoSizeTextType="uniform"/>

        <EditText
            android:id="@+id/birthdayinput"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="6%"
            android:layout_below="@id/birthday"
            android:layout_alignLeft="@id/title"
            app:layout_marginLeftPercent="0%"
            android:layout_marginTop="-5dp"
            android:ems="10"
            android:hint="Please enter your birthday"
            android:textColorHint="#66000000"
            android:textStyle="italic"
            android:background="@drawable/password_field"
            app:autoSizeTextType="uniform"
            android:clickable="true"
            android:focusable="false"/>

        <TextView
            android:id="@+id/gender"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="6%"
            android:layout_below="@id/birthdayinput"
            android:layout_alignLeft="@id/title"
            app:layout_marginLeftPercent="0%"
            app:layout_marginTopPercent="2%"
            android:text="Gender"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@drawable/username_field"
            app:autoSizeTextType="uniform"/>

        <RadioGroup
            android:id="@+id/radioGroupGender"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="6%"
            android:layout_below="@id/gender"
            android:orientation="horizontal"
            android:layout_alignLeft="@id/title"
            app:layout_marginLeftPercent="0%"
            android:layout_marginTop="-5dp"
            android:background="@drawable/password_field"
            app:autoSizeTextType="uniform">

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radio_male" />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radio_female" />
        </RadioGroup>

        <TextView
            android:id="@+id/identitytypetext"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="6%"
            android:layout_below="@id/radioGroupGender"
            android:layout_alignLeft="@id/title"
            app:layout_marginLeftPercent="0%"
            app:layout_marginTopPercent="2%"
            android:text="Role"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@drawable/username_field"
            app:autoSizeTextType="uniform"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/identitytype"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="6%"
            android:textColor="#000000"
            android:layout_below="@id/identitytypetext"
            android:layout_alignLeft="@id/title"
            app:layout_marginLeftPercent="0%"
            android:layout_marginTop="-5dp"
            android:background="@drawable/password_field"
            android:entries="@array/fragment"/>

        <Button
            android:id="@+id/btnsubmit"
            app:layout_widthPercent="25%"
            app:layout_heightPercent="7%"
            app:layout_marginTopPercent="5%"
            app:layout_marginRightPercent="0%"
            android:layout_below="@id/identitytype"
            android:layout_alignRight="@id/title"
            android:background="@drawable/buttonshadow"
            android:text="Submit" />

    </android.support.percent.PercentRelativeLayout>

</ScrollView>