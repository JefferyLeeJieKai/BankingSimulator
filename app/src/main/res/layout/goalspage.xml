<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/wood"
    android:layout_width="match_parent"
    tools:context=".LoginAndHomepagePackage.HomeScreenUser"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp"
        app:layout_scrollFlags="scroll|enterAlways"

        />

    <ImageButton
        android:id="@+id/viewallgoals"
        android:background="@drawable/fingerprint_border"
        android:scaleType="fitCenter"
        app:layout_heightPercent="12%"
        app:layout_marginLeftPercent="22%"
        app:layout_marginTopPercent="24%"
        app:layout_widthPercent="21%"
        app:srcCompat="@drawable/viewgoals" />

    <ImageButton
        android:id="@+id/setnewgoals"
        android:background="@drawable/fingerprint_border"
        android:scaleType="fitCenter"
        app:layout_heightPercent="12%"
        app:layout_marginLeftPercent="55%"
        app:layout_marginTopPercent="24%"
        app:layout_widthPercent="21%"
        app:srcCompat="@drawable/setnewgoal" />

    <ImageButton
        android:id="@+id/addamount"
        android:background="@drawable/fingerprint_border"
        android:scaleType="fitCenter"
        app:layout_heightPercent="12%"
        app:layout_marginLeftPercent="38%"
        app:layout_marginTopPercent="40%"
        app:layout_widthPercent="21%"
        app:srcCompat="@drawable/addammountgoal" />






</android.support.percent.PercentRelativeLayout>