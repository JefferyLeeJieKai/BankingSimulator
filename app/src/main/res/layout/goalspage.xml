<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/beach04"
    android:layout_width="match_parent"
    tools:context=".LoginAndHomepagePackage.HomeScreenUser"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/goalpagetitle"
        android:text="GOAL HOMEPAGE"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="9%"
        app:layout_marginTopPercent="2%"
        android:layout_centerHorizontal="true"
        android:elevation="20dp"
        android:shadowColor="#666666"
        android:shadowDx="20"
        android:shadowDy="20"
        android:fontFamily="@font/titan_one"
        android:shadowRadius="20"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"/>

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        app:layout_marginTopPercent="1%"
        android:layout_below="@id/goalpagetitle"
        android:background="#000000"
        android:paddingBottom="10dip" />

    <!-- <ImageButton
        android:id="@+id/viewallgoals"
        android:background="@drawable/fingerprint_border"
        android:scaleType="fitCenter"
        app:layout_heightPercent="12%"
        app:layout_marginLeftPercent="22%"
        app:layout_marginTopPercent="24%"
        app:layout_widthPercent="21%"
        app:srcCompat="@drawable/viewgoals" />

    <ImageButton
        android:id="@+id/setnewgoals"
        android:background="@drawable/fingerprint_border"
        android:scaleType="fitCenter"
        app:layout_heightPercent="12%"
        app:layout_marginLeftPercent="55%"
        app:layout_marginTopPercent="24%"
        app:layout_widthPercent="21%"
        app:srcCompat="@drawable/setnewgoal" />

    <ImageButton
        android:id="@+id/addamount"
        android:background="@drawable/fingerprint_border"
        android:scaleType="fitCenter"
        app:layout_heightPercent="12%"
        app:layout_marginLeftPercent="38%"
        app:layout_marginTopPercent="40%"
        app:layout_widthPercent="21%"
        app:srcCompat="@drawable/addammountgoal" /> -->

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="12dp"
        android:layout_alignLeft="@+id/goalpagetitle"
        app:layout_marginTopPercent="25%"

        >

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/viewallgoals"
                android:src="@drawable/viewgoals"
                android:scaleType="fitCenter"
                android:background="@null"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

        </LinearLayout>



    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="12dp"
        android:layout_alignRight="@+id/goalpagetitle"
        app:layout_marginTopPercent="25%"
        >

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/setnewgoals"
                android:src="@drawable/setnewgoal"
                android:scaleType="fitCenter"
                android:background="@null"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

        </LinearLayout>



    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="12dp"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="47%"
        >

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/addamount"
                android:src="@drawable/addammountgoal"
                android:scaleType="fitCenter"
                android:background="@null"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

        </LinearLayout>



    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/buttonback"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="7%"
        android:layout_centerHorizontal="true"
        app:layout_marginBottomPercent="6%"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttonblue"
        android:textColor="@color/buttonWord"
        android:fontFamily="@font/titan_one"
        android:text="BACK" />

</android.support.percent.PercentRelativeLayout>